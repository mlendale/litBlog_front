<div class="jumbotron text-center">
  <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
    < label for="name">Name< /label>
    {{#each user.errors.name as |error|}}
      <span class="errors">{{error.message}}</span>
    {{/each}}
    {{validated-input model=user valuePath="name" type="text" value="name" class="form-control" placeholder="Enter name" }}
    
    
    < label for="email">Email< /label>
    {{#each user.errors.email as |error|}}
      <span class="errors">{{error.message}}</span>
    {{/each}}
    {{validated-input model=user valuePath="email" type="email" value="email" class="form-control" placeholder="Enter e-mail address" }}
    
    
    < label for="password">Password< /label>
    {{#each user.errors.password as |error|}}
      <span class="errors">{{error.message}}</span>
    {{/each}}
    {{validated-input model=user valuePath="password" type="password" value="password" class="form-control" type="password"  placeholder="Enter password" }}
    
    
    < label for="passwordConfirmation">Password Confirmation< /label>
    {{#each user.errors.password_confirmation as |error|}}
      <span class="errors">{{error.message}}</span>
    {{/each}}
    {{validated-input model=user valuePath="password_confirmation" type="password confirmation" value="password_confirmation" class="form-control" type="password" placeholder="Confirm password" }}
    
  </div>

  <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-3">
    <button class="btn btn-primary btn-lg btn-block" {{action "submit"}}>{{button}}</button>
  </div>

</div>    
{{#if errorMessage}}
	<div class="alert alert-danger">
	    <p>
	      <strong>Sign up failed:</strong> <code>{{errorMessage}}</code>
	    </p>
	</div>
{{/if}}