 <div class="center jumbotron">
    <h1>Welcome to the litBlog app</h1>
    
    {{#if session.isAuthenticated}}
    
    <h3>What are you up to today?</h3>
    <ul style="list-style-type:none">
    <li>{{#link-to 'users.show.posts' currentUser.user.name}}See your published posts ?{{/link-to}}</li>
    <li>{{#link-to 'users.show.posts.new' currentUser.user.name}}create a new post ?{{/link-to}}</li>
    <li>{{#link-to 'users.edit' currentUser.user.name}}Update your profile ?{{/link-to}}</li>
    </ul>
    {{else}}
    
    
    <h2>This is a light blogging application.</h2>
    	<div class="alert alert-info">
			{{link-to "Sign up now!" 'users.new' class="btn btn-lg btn-primary"}}		
		</div>
	{{/if}}
    
</div>
